<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:parivartree="http://schemas.android.com/apk/res/com.gizmeon.parivartree"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/parivar_mobile_bg_3_0"
    android:padding="10dp"
    android:gravity="center"
    android:orientation="vertical"
    android:weightSum="1.0" >
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".2" >
        
	    <ImageView
	        android:id="@+id/imageView1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerInParent="true"
	        android:src="@drawable/parivartree_logo_small" />
	    
	     
	    
    </RelativeLayout>
    
	<!--  
    <com.gizmeon.parivartree.CircularImageView
        style="@attr/circularImageViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/default_user_icon_profile_100"
        parivartree:border="true"
        parivartree:border_color="@color/pt_dark_grey"
        parivartree:border_width="4dp" />
    -->  
    <FrameLayout 
        android:layout_width="wrap_content"
		android:layout_height="0dp"
		android:orientation="vertical"
		android:layout_weight=".8" >
	    
	    
    
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="40dp"
	        android:padding="20dp"
	        android:background="@drawable/parivar_mobile_square_transparent"
	        android:orientation="vertical"
	        
	        android:gravity="center">
	        
	        
	        <EditText
	            android:id="@+id/editText1"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textStyle="italic"
	            android:textColorHint="@color/pt_grey"
	            android:ems="10"
	            android:background="@drawable/parivar_mobile_field_1_2"
	            android:inputType="textPersonName"
	            android:hint="Relationship Status"
	            android:padding="8dp" />
	        
	        <EditText
	            android:id="@+id/editText2"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textStyle="italic"
	            android:textColorHint="@color/pt_grey"
	            android:ems="10"
	            android:background="@drawable/parivar_mobile_field_1_2"
	            android:inputType="textPersonName"
	            android:hint="Current Location"
	            android:padding="8dp" />
	        
	        <EditText
	            android:id="@+id/editText3"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textStyle="italic"
	            android:textColorHint="@color/pt_grey"
	            android:ems="10"
	            android:background="@drawable/parivar_mobile_field_1_2"
	            android:inputType="phone"
	            android:hint="Education"
	            android:padding="8dp" />
	        
	        <EditText
	            android:id="@+id/editText4"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textStyle="italic"
	            android:textColorHint="@color/pt_grey"
	            android:ems="10"
	            android:background="@drawable/parivar_mobile_field_1_2"
	            android:inputType="textPassword"
	            android:hint="Works at"
	            android:padding="8dp" />
	        
	        <ImageView 
		            android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_marginTop="10dp"
			        android:src="@drawable/finish_signup" />
	        
	    </LinearLayout>
	    
	    <ImageView
	        android:id="@+id/imageView2"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_horizontal"
	        android:layout_marginBottom="-30dp"
	        android:src="@drawable/parivar_mobile_profile_image_normal" />
	    
    </FrameLayout>
</LinearLayout>