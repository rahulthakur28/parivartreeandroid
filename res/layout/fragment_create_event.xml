<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/parivar_mobile_bg_3_0" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/parivar_mobile_square_transparent"
        android:orientation="vertical"
        android:paddingLeft="6dp"
        android:paddingRight="6dp" >     

            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Event"
                android:textColor="@color/pt_blue"
                  android:textSize="18sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spinner1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:padding="5dp"
                android:background="@drawable/edit_text_background"/>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Event Name"
                 android:textSize="18sp"
                android:textColor="@color/pt_blue"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editText3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:ems="10"
                android:hint="event name"
                 android:padding="5dp"
                android:background="@drawable/edit_text_background"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="10dp"
                android:text="Event Date"
                android:textColor="@color/pt_blue"
                 android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editeventdate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:ems="10"
                android:hint="event date"
                 android:padding="5dp"
                android:background="@drawable/edit_text_background"
                android:editable="false"/>
            <!-- <DatePicker
                android:id="@+id/datePickercreate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".8"
                android:calendarViewShown="false"
                android:gravity="center_horizontal" /> -->
            
            <!--
            <EditText
            android:id="@+id/editText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:hint="dd-mm-yyyy"
            android:inputType="date" />
            -->

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Hour"
                 android:textSize="18sp"
                android:textColor="@color/pt_blue"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spinnercreatehour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                 android:padding="5dp"
                android:background="@drawable/edit_text_background"
                android:ems="10" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Minute"
                 android:textSize="18sp"
                android:textColor="@color/pt_blue"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spinnercreatemin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                 android:padding="5dp"
                android:background="@drawable/edit_text_background"
                android:ems="10" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Event Description"
                android:textColor="@color/pt_blue"
                 android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editText4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:ems="10"
                android:hint="Event Description"
                 android:padding="5dp"
                android:background="@drawable/edit_text_background"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Location"
                 android:textSize="18sp"
                android:textColor="@color/pt_blue"
                android:textStyle="bold" />

            <AutoCompleteTextView
                android:id="@+id/editText5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:ems="10"
                android:hint="location"
                 android:padding="5dp"
                android:background="@drawable/edit_text_background"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Reach"
                 android:textSize="18sp"
                android:textColor="@color/pt_blue"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spinner2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/edit_text_background"
                 android:padding="5dp"
                android:ems="10" />
<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:paddingBottom="10dp" >
            <Button
                android:id="@+id/btncreate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_corners_blue"
                android:padding="10dp"
                android:textColor="@color/pt_white"
                android:text="Create Event" />
            </LinearLayout>
    </LinearLayout>

</ScrollView>