<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
    android:layout_marginTop="5dp" 
    android:layout_marginBottom="5dp"
    android:weightSum="1.0">

        <ImageView
            android:id="@+id/imageViewnotifi"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_centerInParent="true"
            android:layout_weight=".2"
            android:src="@drawable/parivar_mobile_profile_image_vsmall" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical" 
            android:layout_weight=".8">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/textviewnotifilist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="notification Text "
                     android:textSize="14dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/textviewnotifidate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="sept 20 10:25 AM"
                    android:textColor="#0000FF"
                    android:textSize="12dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearacceptignore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="5dp"
        android:gravity="right"
        android:orientation="horizontal"
        android:visibility="invisible" >

        <Button
            android:id="@+id/btnignoreinvitation"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corners_orange"
            android:minHeight="25dip"
            android:text="Ignore"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnacceptinvitation"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/rounded_corners_orange"
            android:minHeight="25dip"
            android:text="Accept"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>