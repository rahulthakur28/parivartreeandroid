  <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:facebook="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/parivar_mobile_bg_3_0"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:gravity="center"
    android:weightSum="1.0" >
    
     <RelativeLayout
        android:id="@+id/relativeLayout0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical" >
        
	    <ImageView
	        android:id="@+id/imageView1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerHorizontal="true"
	        android:src="@drawable/parivartree_logo_127" />
    
    </RelativeLayout>
    
      <LinearLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:alpha="1"
        android:background="@drawable/parivar_mobile_square_transparent"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="8dp" >
		
            <LinearLayout
            android:gravity="center"
            android:paddingBottom="5dp"
            android:orientation="horizontal"
            android:weightSum="1.0"
            android:alpha="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            
            <TextView
                android:id="@+id/textforgotemail"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColorHint="@color/pt_grey"
                android:ems="10"
                android:text=" Enter your Email Id"
                android:textColor="@color/pt_blue"
                android:background="@drawable/parivar_mobile_field"
                android:paddingRight="2dp"
                android:paddingEnd="2dp"
                android:paddingLeft="8dp"
                android:paddingStart="8dp" />
            
                 </LinearLayout>
          
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="1.0"
            android:paddingRight="18dp"
            android:paddingLeft="18dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout1"
            android:alpha="1">
     
            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".2"
                android:src="@drawable/parivar_mobile_icon01" />   
            <EditText
                android:id="@+id/editforgotemail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".8"
                android:textStyle="italic"
                android:textColorHint="@color/pt_ashgrey"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:hint="Email"
                android:background="@drawable/parivar_mobile_field_1_2"
                android:paddingRight="2dp"
                android:paddingEnd="2dp"
                android:paddingLeft="8dp"
                android:paddingStart="8dp" />
            
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="1.0"
            android:paddingTop="30dp"
            android:paddingBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout4">
            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:contentDescription="forgot send button"
                android:src="@drawable/key" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
