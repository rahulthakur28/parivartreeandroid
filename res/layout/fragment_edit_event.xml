<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/parivar_mobile_bg_3_0" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/parivar_mobile_square_transparent"
        android:orientation="vertical"
        android:paddingLeft="6dp"
        android:paddingRight="6dp" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Event"
                android:textColor="@color/pt_blue"
                 android:layout_marginTop="20dp"
                 android:textSize="18sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spinneredit1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10" 
                android:layout_marginTop="5dp"
                android:padding="5dp"
                android:background="@drawable/edit_text_background"/>
    
            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Event Name"
                android:textColor="@color/pt_blue"
                 android:layout_marginTop="10dp"
                 android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editTextedit3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="event name"
                android:inputType="textPersonName" 
                android:layout_marginTop="5dp"
                android:padding="5dp"
                android:background="@drawable/edit_text_background"/>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Event Date "
                android:textColor="@color/pt_blue"
                 android:layout_marginTop="10dp"
                 android:textSize="18sp"
                android:textStyle="bold" />
            
 				<EditText
                android:id="@+id/editeventdateedit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="event date"
                android:editable="false"
                android:layout_marginTop="5dp"
                android:padding="5dp"
                android:background="@drawable/edit_text_background"/>
            <!--
             <DatePicker
                android:id="@+id/datePickeredit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".8"
                android:calendarViewShown="false"
                android:gravity="center_horizontal" />
                
                
             <EditText
            android:id="@+id/editTextedit2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:hint="dd-mm-yyyy"
            android:inputType="" />
            -->

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hour"
                android:textColor="@color/pt_blue"
                 android:layout_marginTop="10dp"
                 android:textSize="18sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spinneredithour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10" 
                android:layout_marginTop="5dp"
                android:padding="5dp"
                android:background="@drawable/edit_text_background"/>

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Minute"
                android:textColor="@color/pt_blue"
                 android:layout_marginTop="10dp"
                 android:textSize="18sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spinnereditmin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10" 
                android:layout_marginTop="5dp"
                android:padding="5dp"
                android:background="@drawable/edit_text_background"/>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Event Description"
                android:textColor="@color/pt_blue"
                 android:layout_marginTop="10dp"
                 android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editTextedit4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Event Description"
                android:inputType="textPersonName"
                android:layout_marginTop="5dp"
                android:padding="5dp"
                android:background="@drawable/edit_text_background" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Location"
                android:textColor="@color/pt_blue"
                 android:layout_marginTop="10dp"
                 android:textSize="18sp"
                android:textStyle="bold" />

            <AutoCompleteTextView
                android:id="@+id/editTextedit5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="location"
                android:inputType="textPersonName" 
                android:layout_marginTop="5dp"
                android:padding="5dp"
                android:background="@drawable/edit_text_background"/>

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Reach"
                android:textColor="@color/pt_blue"
                 android:layout_marginTop="10dp"
                 android:textSize="18sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spinneredit2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10" 
                android:layout_marginTop="5dp"
                android:padding="5dp"
                android:background="@drawable/edit_text_background"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:paddingBottom="10dp" >

            <Button
                android:id="@+id/btneditok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/rounded_corners_blue"
                android:ems="10"
                android:text="SAVE" 
                android:textColor="@color/pt_white"/>
        </LinearLayout>
    </LinearLayout>

</ScrollView>