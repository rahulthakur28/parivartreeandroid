<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
 	android:orientation="vertical">
 <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/pt_grey"
        android:orientation="horizontal"
        android:padding="7dp"
        android:weightSum="1.0" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight=".6" >

            <TextView
                android:id="@+id/textviewphotos"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:background="@drawable/text_selector"
                android:text="Create Photos" 
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/textviewvideos"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                 android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:background="@drawable/text_selector"
                android:text="Create Videos" 
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:gravity="right"
            android:layout_weight=".4" >

            <Button
                android:id="@+id/btncreatestudio"
                 android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="30dp"
                android:gravity="center_vertical"
                android:background="@drawable/rounded_corners_blue"
                android:padding="5dp"
                android:text="View Videos"
                android:textColor="@color/pt_white" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@drawable/parivar_mobile_square_transparent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:padding="10dp" >

        <EditText
            android:id="@+id/edit_video_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/edit_text_background"
            android:ems="10"
            android:hint="Video Name"
            android:inputType="textPersonName"
            android:padding="10dp" />

        <EditText
            android:id="@+id/edit_video_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_text_background"
            android:ems="10"
            android:hint="Video Description"     
            android:inputType="textMultiLine"
            android:padding="10dp" />

        <Spinner
            android:id="@+id/createvideospinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_text_background"
            android:padding="10dp" />
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:background="@drawable/edit_text_background2"
            android:paddingBottom="10dp" >
            <Button
                android:id="@+id/btnbrowsevideo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_corners_blue"
                android:padding="10dp"
                android:textColor="@color/pt_white"
                android:text="BROWSE"
                android:textStyle="bold" 
                android:gravity="center_vertical"/>
            </LinearLayout>
    </LinearLayout>
</LinearLayout>
