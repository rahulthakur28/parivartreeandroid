<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/parivar_mobile_bg_3_0"
    android:orientation="vertical"
    android:weightSum="1.0" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight=".5"
        android:paddingBottom="0dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:paddingTop="80dp"
        android:src="@drawable/parivar_mobile_homescreen_logo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".5"
        android:weightSum="1.0" >

        <ImageView
            android:id="@+id/sign_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:padding="20dp"
            android:src="@drawable/parivar_mobile_homescreen_signup" />

        <ImageView
            android:id="@+id/login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:padding="20dp"
            android:src="@drawable/parivar_mobile_homescreen_login" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="10dp"
        android:gravity="right" >
	
      <TextView
            android:id="@+id/termtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Terms"
            android:layout_gravity="center_vertical"
            android:textColor="#0000ff"
            android:textStyle="italic" />

        <ImageView
            android:id="@+id/termimage"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/help_and_support" />
    </LinearLayout>

</LinearLayout>